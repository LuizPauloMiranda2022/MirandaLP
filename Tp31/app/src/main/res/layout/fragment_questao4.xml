<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Questao1Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_titulo_q4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Considerando seus rendimentos regulares,qual a porcentagem voce pretende reservar para aplicacoes financeiras?" />

        <RadioGroup
            android:id="@+id/radio_group_q4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb_q4_itema"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Maximo 25%" />

            <RadioButton
                android:id="@+id/rb_q4_itemb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entre 25,01 e 50%" />
            <RadioButton
                android:id="@+id/rb_q4_itemc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Acima de 50%" />




        </RadioGroup>

        <Button
            android:id="@+id/btn_confirmaResposta_q4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Confirmar" />
    </LinearLayout>
</FrameLayout>