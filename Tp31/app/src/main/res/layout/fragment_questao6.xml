<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Questao1Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_titulo_q6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Como esta distribuido o seu patrimonio" />

        <RadioGroup
            android:id="@+id/radio_group_q6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb_q6_itema"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meu patrimonio nao esta aplicado ou esta todo aplicado em renda fixa e/ou imoveis" />

            <RadioButton
                android:id="@+id/rb_q6_itemb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Menos de 25% em renda variavel e o restante em renda fixa e/ou imoveis" />
            <RadioButton
                android:id="@+id/rb_q6_itemc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entre 25,01 e 50% aplicado em renda variavel e o restante em renda fixa e/ou imoveis" />
            <RadioButton
                android:id="@+id/rb_q6_itemd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Acima de 50% em renda variavel" />




        </RadioGroup>

        <Button
            android:id="@+id/btn_confirmaResposta_q6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Confirmar" />
    </LinearLayout>
</FrameLayout>