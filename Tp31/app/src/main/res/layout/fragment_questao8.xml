<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Questao1Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_titulo_q8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Qual sua faixa de renda mensal media?" />

        <RadioGroup
            android:id="@+id/radio_group_q8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb_q8_itema"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ate R$ 1.000" />

            <RadioButton
                android:id="@+id/rb_q8_itemb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="De R$ 1.001 ate R$ 5.000" />
            <RadioButton
                android:id="@+id/rb_q8_itemc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="De R$ 5.000 ate R$ 10.000" />
            <RadioButton
                android:id="@+id/rb_q8_itemd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Acima de R$ 10.000" />




        </RadioGroup>

        <Button
            android:id="@+id/btn_confirmaResposta_q8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Confirmar" />
    </LinearLayout>
</FrameLayout>